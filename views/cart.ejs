<!-- views/cart.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hockey Shop - Shopping Cart</title>
  <link rel="stylesheet" type="text/css" href="/public/styles.css">
</head>
<body>
  <h1>Shopping Cart</h1>

  <% if (cart && cart.cart_items) { %>
    <% if (typeof cart.cart_items === 'string') { %>
      <% cart.cart_items = JSON.parse(cart.cart_items); %>
    <% } %>

    <% if (cart.cart_items.length > 0) { %>
      <ul>
        <% cart.cart_items.forEach(cartItem => { %>
          <li>
            <h2><%= cartItem.name %></h2>
            <img src="<%= cartItem.image %>" alt="<%= cartItem.name %> Image" width="150">
            <p><strong>Quantity:</strong> <%= cartItem.quantity %></p>
            <p><strong>Price:</strong> $<%= (cartItem.price_in_cents * cartItem.quantity) / 100 %></p>
            <!-- Add more details based on your equipment schema -->
          </li>
        <% }) %>
      </ul>
      <form action="/complete-purchase" method="post">
        <button type="submit">Complete Purchase</button>
      </form>
      <form action="/clear-cart" method="post">
        <button type="submit">Clear Cart</button>
      </form>
    <% } else { %>
      <p>Your shopping cart is empty.</p>
    <% } %>
  <% } else { %>
    <p>Error loading your shopping cart.</p>
  <% } %>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <a href="/">Back to All Items</a>

</body>
</html>
