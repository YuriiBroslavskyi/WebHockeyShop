<!-- views/item_details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hockey Shop - Item Details</title>
  <link rel="stylesheet" type="text/css" href="/public/styles.css">
  <link rel="icon" type="image/png" href="/public/images/LogoHockeyLogo2.png"/>

</head>
<body>
  <header class = "header">

    <div class="site-name">
      <img id="TheRinkLogo" src="/public/images/TheRinkLogo-removebg-preview.png" alt="TheRinkLogo" >
    </div>
    <div class="header-anchors">

      <div class="profile-icon">
        <a href="/profile">
          <img src="/public/images/profileIcon.png" alt="Profile Icon" width="30">
        </a>
      </div>

      <div class="shopping-cart">
        <a href="/cart">
          <img src="/public/images/shopping-cart-icon.png" alt="Shopping Cart Icon" width="30">
        </a>
      </div>

    </div>

    <div class="user-welcome">
      <% if (user) { %>
        <p>Welcome, <%= user.email %>! <a href="/logout">Logout</a></p>
      <% } else { %>
        <p>You are not logged in. <a href="/login">Login</a> | <a href="/signup">Sign Up</a></p>
      <% } %>
    </div>
  </header>

  <div class="item-details">
    <h1><%= item.name %> Details</h1>

    <img src="<%= item.image %>" alt="<%= item.name %> Image" width="300">
  
    <p><strong>Description:</strong> <%= item.description %></p>
    <p><strong>Price:</strong> $<%= item.price_in_cents / 100 %></p>
    <p><strong>Category:</strong> <%= item.category %></p>
    <p><strong>Rating:</strong> <%= item.rating %></p>
  
    <!-- Add more details based on your equipment schema -->
  
    <form action="/add-to-cart" method="post">
      <input type="hidden" name="userId" value="<%= user ? user.id : '' %>">
      <input type="hidden" name="itemId" value="<%= item.id %>">
      <input class="item-quantity" type="number" name="quantity" value="1" min="1">
      <button type="submit">Add to Cart</button>
    </form>
  
    <a href="/">Back to All Items</a>
  
  </div>
</body>
</html>
